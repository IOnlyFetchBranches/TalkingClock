<Window x:Class="TalkingClock.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TalkingClock"
        mc:Ignorable="d"
        Title="Talking Clock" Height="350" Width="525" Background="Black" ResizeMode="NoResize">
    <Grid>
        <Label x:Name="HourLabel" Content="HH" Margin="118,92,279,0" VerticalAlignment="Top" Height="91" Foreground="White" FontSize="72" HorizontalContentAlignment="Right"/>
        <Label Content="Label" HorizontalAlignment="Left" Margin="267,77,0,0" VerticalAlignment="Top" Height="128"/>
        <Label x:Name="ColonLabel" Content=":" HorizontalAlignment="Left" Margin="234,84,0,0" VerticalAlignment="Top" Height="128" FontSize="72" Width="71" Foreground="White"/>
        <Label x:Name="MinLabel" Content="MM" Margin="260,92,118,0" VerticalAlignment="Top" Foreground="White" FontSize="72"/>
        <Label x:Name="AMPMLabel" Content="AM" HorizontalAlignment="Left" Margin="385,128,0,0" VerticalAlignment="Top" Foreground="White" FontSize="36" RenderTransformOrigin="0.322,0.06"/>

    </Grid>
</Window>
